<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.waterfall.controller.FillPurityReportActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contaminant Level"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="345dp"
        android:layout_below="@+id/virusLevel"
        android:layout_alignStart="@+id/virusLevel"
        android:layout_marginTop="13dp"
        android:labelFor="@+id/containmentLevel"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virus Level"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="266dp"
        android:layout_below="@+id/OCspinner"
        android:layout_alignStart="@+id/OCspinner"
        android:layout_marginTop="37dp"
        android:labelFor="@+id/virusLevel"/>

    <EditText
        android:id="@+id/virusLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="294dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="18dp" />

    <Spinner
        android:id="@+id/OCspinner"
        android:layout_width="333dp"
        android:layout_height="29dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="76dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Condition"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="34dp"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp" />

    <EditText
        android:id="@+id/containmentLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="376dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/submit_report"
        style="@style/com_facebook_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="438dp"
        android:onClick="submit"
        android:layout_below="@+id/containmentLevel"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginTop="69dp" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:onClick="cancel"
        android:text="Cancel"
        android:layout_alignBottom="@+id/submit_report"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginStart="18dp" />

</RelativeLayout>
