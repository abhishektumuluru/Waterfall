<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.waterfall.controller.FillReportActivity">

    <Spinner
        android:id="@+id/wcSpinner"
        android:layout_width="333dp"
        android:layout_height="29dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="218dp"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginBottom="13dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Condition"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="191dp"
        android:layout_above="@+id/wcSpinner"
        android:layout_alignStart="@+id/wtSpinner"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Containment Level"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="345dp"
        android:layout_above="@+id/containmentLevel"
        android:layout_alignStart="@+id/virusLevel"
        android:layout_marginBottom="17dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virus Level"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="266dp"
        android:layout_above="@+id/virusLevel"
        android:layout_alignStart="@+id/virusLevel"
        android:layout_marginBottom="17dp" />

    <EditText
        android:id="@+id/virusLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="294dp"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/containmentLevel"
        android:layout_alignEnd="@+id/submit_report" />

    <Spinner
        android:id="@+id/wtSpinner"
        android:layout_width="333dp"
        android:layout_height="29dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/OCspinner"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Type"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="116dp"
        android:layout_below="@+id/OCspinner"
        android:layout_alignStart="@+id/wtSpinner" />

    <Spinner
        android:id="@+id/OCspinner"
        android:layout_width="333dp"
        android:layout_height="29dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="76dp"
        android:layout_marginTop="59dp"
        android:layout_alignStart="@+id/wtSpinner" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Condition"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="34dp"
        android:layout_alignStart="@+id/OCspinner"
        android:layout_marginTop="26dp" />

    <EditText
        android:id="@+id/containmentLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="376dp"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/submit_report"
        android:layout_alignStart="@+id/wcSpinner" />

    <Button
        android:id="@+id/submit_report"
        style="@style/com_facebook_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="438dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="submit"/>

</RelativeLayout>
